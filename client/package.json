{
  "name": "palace-of-quests-client",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend for Palace of Quests built with React",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",                // Starts the development server
    "build": "react-scripts build",               // Builds the app for production
    "test": "react-scripts test",                 // Runs tests
    "eject": "react-scripts eject",               // Ejects from CRA (not recommended)
    "lint": "eslint src/**/*.{js,jsx}"            // Lints the codebase
  },
  "dependencies": {
    "axios": "^1.4.0",                            // HTTP client for API calls
    "react": "^18.2.0",                           // React core library
    "react-dom": "^18.2.0",                       // React DOM library
    "react-router-dom": "^6.15.0",                // React Router for navigation
    "react-scripts": "5.0.1",                     // Scripts and configuration for CRA
    "web-vitals": "^3.2.0"                        // Web performance metrics
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",       // Jest matchers for DOM nodes
    "@testing-library/react": "^14.0.0",          // Testing library for React
    "@testing-library/user-event": "^14.5.8",     // Simulates user interactions
    "eslint": "^8.53.0",                          // Linter for JavaScript/React
    "eslint-config-prettier": "^9.0.0",           // Disables ESLint rules conflicting with Prettier
    "eslint-plugin-react": "^7.33.2",             // React-specific linting rules
    "prettier": "^3.1.3"                          // Code formatter
  },
  "proxy": "http://localhost:5000",               // Proxy for API requests to the Flask backend
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
  }
